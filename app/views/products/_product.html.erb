<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol(product.price) %></span>
    </h1>
  <% end %>
  
  <div>
    <% if product.quantity == 0 %>
      <!-- Display Sold Out badge -->
      <span class="sold-out-badge">Sold Out</span>
      
      <!-- Use a disabled class for the button when sold out -->
      <%= button_to add_item_cart_path(product_id: product.id), class: product.quantity == 0 ? 'btn btn-sold-out' : 'btn', method: :post, disabled: product.quantity == 0 do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    <% else %>
      <!-- Normal button for available products -->
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    <% end %>
  </div>
</article>
